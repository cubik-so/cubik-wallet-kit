{
    "extends": "@cubik-wallet/configs/tsconfig/index.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": "./src",

        "target": "esnext",
        "module": "Preserve",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "lib": ["es2015", "DOM"],
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "declaration": true,
        "strict": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/context/*": ["./src/context/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/components/*": ["./src/components/*"],
            "@/utils/*": ["./src/utils/*"]
        }
    }
}
