{
    "extends": "@cubik-wallet/configs/tsconfig/index.json",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        // "downlevelIteration": true,
        // "skipLibCheck": true,
        // "strict": true,
        // "noEmit": true,
        // "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        // "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "@/*": ["./src/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/context/*": ["./src/context/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/components/*": ["./src/components/*"],
            "@/utils/*": ["./src/utils/*"]
        }
    }
}
